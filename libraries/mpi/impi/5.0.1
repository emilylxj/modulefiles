setenv I_MPI_ROOT /pkg/intel/impi/5.0.1.035

setenv MPI_ROOT $env(I_MPI_ROOT)
set MODNAME impi
set VERSION 5.0.1
setenv MPI_PRG_ENV ${MODNAME}-${VERSION}
